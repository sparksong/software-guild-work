@model HRPortal.WebUI.ViewModels.PolicyListVM

@{
    ViewBag.Title = "ViewPolicy";
}
<script>
function goBack() {
    window.history.back();
}
</script>

<h4>View Policy</h4>

<div class="row">
    <div class="col-md-6 col-xs-12">
        <button class="btn btn-success btn-sm" onclick="goBack()">Back to list</button>
        <br />

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">@Model.Policy.PolicyName</h4>
            </div>
            <div class="panel-body">
                <div>
                    <label>Policy Number: </label>
                    <br />
                    @Html.DisplayFor(m => m.Policy.PolicyNumber)
                </div>
                <div class="form-group">
                    <label>Policy Content: </label>
                    <br />
                    @Html.DisplayFor(m => m.Policy.Content)
                </div>
            </div>
        </div>
    </div>
</div>