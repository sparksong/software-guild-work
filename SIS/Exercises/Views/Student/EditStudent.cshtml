@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Edit Student</h3>
                @Html.ActionLink("Return to List", "List", "Student")
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(s => s.Student.StudentId)
                    <div class="col-xs-12 col-sm-7">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h4 class="panel-title">Personal Details</h4>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label>First Name:</label>
                                    @Html.TextBoxFor(s => s.Student.FirstName, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Last Name:</label>
                                    @Html.TextBoxFor(s => s.Student.LastName, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Major:</label>
                                    @Html.DropDownListFor(s => s.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>GPA:</label>
                                    @Html.TextBoxFor(s => s.Student.GPA, new { @class = "form-control" })
                                </div>
                                <h4>Courses</h4>
                                <div class="form-group">
                                    @Html.ListBoxFor(s => s.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                </div>

                                <h4>Address</h4>
                                <div class="form-group">
                                    <label>Street:</label>
                                    @Html.TextBoxFor(s => s.Student.Address.Street1, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Street2:</label>
                                    @Html.TextBoxFor(s => s.Student.Address.Street2, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>City:</label>
                                    @Html.TextBoxFor(s => s.Student.Address.City, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>State Abbreviation:</label>
                                    @Html.TextBoxFor(s => s.Student.Address.State.StateAbbreviation, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Postal Code:</label>
                                    @Html.TextBoxFor(s => s.Student.Address.PostalCode, new { @class = "form-control" })
                                </div>

                                <button type="submit" class="btn btn-sm btn-danger">Edit</button>
                                @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>