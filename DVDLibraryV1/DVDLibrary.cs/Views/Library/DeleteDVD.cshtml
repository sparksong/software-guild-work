@model DVDLibrary.ViewModel.DVDListVM

@{
    ViewBag.Title = "DeleteDVD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remove From Collection</h2>

<div class="row">
    <div class="col-xs-12">
        <h4>Delete DVD</h4>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(d => d.dvd.DvdId)
            <p>Are you sure that you wish to delete the DVD "@Html.DisplayFor(d => d.dvd.Title)"?</p>
            <hr />
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Cancel Delete", "ManageDVDs", "Library", null, new { @class = "btn btn-info" })
        }
    </div>
</div>
